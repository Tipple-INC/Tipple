<div class="container">
  <div class="row">
    {{ message }}
    <div class="col-sm-6 centered-form">
      <form action="/social/postImage" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="imgtext">Wine Name:</label>
          <input type="text" name="wineName" class="form-control">
        </div>
        <div class="form-group">
          <label for="imgtext">Vintage:</label>
          <input type="text" name="vintage" class="form-control">
        </div>
        <div class="form-group">
          <label for="imgtext">Region:</label>
          <input type="text" name="region" class="form-control">
        </div>
        <div class="form-group">
          <label for="exampleFormControlSelect1">Score</label>
          <select class="form-control" id="exampleFormControlSelect1" name="score">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
          </select>
          <small id="scoreHelp" class="form-text text-muted">1 being the worst (yuk!), 10 being the best! (yummy!)</small>
        </div>
        <div>
          <label>Now just upload a photo...</label>
          <input type="file" name="photo">
        </div>
        <button type="submit">Post Now!</button>
      </form>
    </div>
  </div>
</div>