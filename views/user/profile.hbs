<div class="intro">
  <div class="text-center">
    {{#if user}}
    <img class="img-thumbnail profilePic" src="{{user.imgPath}}" alt="">
    {{/if}}
  </div>
</div>

<div class="form-group uploadProfileCon" id="upload_button">
  <form action="/profile/uploadCloud" class="uploadProfile" method="post" enctype="multipart/form-data">
    <label>
      <input type="file" ngf-select ng-model="new_files" ng-change="fs.uploadFiles(new_files)" multiple>
      <span class="btn btn-primary">Profile Picture</span>
    </label>
  </form>
</div>

<h2 class="text-center profile-title">{{user.username}}, welcome to your Tipple page.</h2>

<div class="container">

  <div class="infoLinks">
  <a class="infoLink" href="/profile/{{user._id}}/update">Update your details</a>

  {{#if owner}}
  <a class="infoLink" href="/profile/{{user._id}}/store">See Your Store Information</a>
  {{/if}}
  </div>

  <h5>Your Wishlist:</h5>
<div class="infoBox d-flex flex-wrap flex-row">
<div class="wishlist d-flex flex-wrap flex-row">
  <div class="d-flex flex-wrap flex-row align-items-start justify-content-around">

    {{#each wine}}
    <div class="card" style="width: 18rem;">
      <form action="/profile/{{_id}}/removeWish" method="POST">
      <button type="submit" >remove</button>
      </form>
      <img class="card-img-top wishCardImg" src="{{imgPath}}" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">{{wineName}}</h5>
        <p class="card-text">User comments</p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Region: {{region}}</li>
        <li class="list-group-item">Vintage: {{vintage}}</li>
      </ul>
    </div>
    {{/each}}
  </div>
</div>
<div class="wineQuote">
<div>
<p class="quote">"{{quote.quote}}"</p>
</div>
<div>
<p class="author"><strong>{{quote.author}}</strong></p>

</div>
</div>

</div>