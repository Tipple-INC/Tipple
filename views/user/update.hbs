<div class="wrapper">

  <h2>Update</h2>

  <form action="/profile/{{user._id}}/update" method="POST" id="form-container">
    <div class="form-group">
      <label for="username">Username</label>
      <input name="username" type="text" class="form-control" value="{{user.username}}">
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" class="form-control" name="email" value="{{user.email}}">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" name="password" placeholder="Password">
    </div>
    
    <div class="form-check">
      <input class="form-check-input" type="checkbox" name="storeowner" value="STOREOWNER" 
      {{#ifvalue user}}
      checked
      {{else}}
      {{/ifvalue}}
      >
      <label class="form-check-label" for="defaultCheck1"> Are you a Wine Store Owner? </label>
    </div>
    


    <br>
    {{#if message }}
    <div class="error-message">{{ message }}</div>
    {{/if}}
    <button type="submit" class="btn btn-primary homeButton">Update Details</button>
  </form>

</div>