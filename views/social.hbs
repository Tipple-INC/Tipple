<h1>These are the wines</h1>

{{#each wines}}

<div class="card" style="width: 18rem;">
  <img class="card-img-top" src=".../100px180/?text=Image cap" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{wineName}}</h5>
    <p class="card-text">User comments</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Region: {{region}}</li>
    <li class="list-group-item">Vintage: {{vintage}}</li>
    <li class="list-group-item">Color: {{color}}</li>
  </ul>
  <div class="card-body">
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
</div>

{{/each}}
